<?xml version="1.0" encoding="UTF-8"?>
<blockViews:SimpleBlockView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:dragNDrop="clr-namespace:DragNDrop;assembly=DragNDrop"
             xmlns:blockViews="clr-namespace:DragNDrop.BlockViews;assembly=DragNDrop"
             xmlns:utils="clr-namespace:DragNDrop.Utils;assembly=DragNDrop"
             x:Class="DragNDrop.BlockViews.ImageBlockView">
   
    <Frame x:Name="XamlFrame" IsClippedToBounds="True" HasShadow="True" BackgroundColor="White"
           OutlineColor="Gray" Padding="5">

        <StackLayout x:Name="XamlStackLayout" Orientation="Horizontal">
            <Image x:Name="XamlImage"/>
            <!--<Image Source="{utils:ImageResource DragNDrop.Resources.turn-left.png}"/>-->
        </StackLayout>

    </Frame>
</blockViews:SimpleBlockView>